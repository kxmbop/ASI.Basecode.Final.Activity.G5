@model ASI.Basecode.Services.ServiceModels.KnowledgeBaseViewModel
@using static ASI.Basecode.Resources.Views.Screen

<div class="container pt-5">
    <h2>New Knowledge Base</h2>

    <form method="post" asp-action="NewKnowledgeBase">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" class="form-control" placeholder="Title here" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Creator</label>
            <input asp-for="Creator" class="form-control" placeholder="Creator here" />
            <span asp-validation-for="Creator" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Content</label>
            <input asp-for="Content" class="form-control" placeholder="Content here" />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg mt-3">Submit</button>
    </form>
</div>
