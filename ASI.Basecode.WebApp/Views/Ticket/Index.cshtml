@model List<ASI.Basecode.Services.ServiceModels.TicketViewModel>
@section styles {
    <link rel="stylesheet" href="~/css/ticket.css" />
}
<h2>Tickets</h2>
<a asp-action="NewTicket" asp-controller="Ticket" class="btn btn-outline-primary mb-4">New Ticket</a>

<div class="row">
    <div class="col-md-3">
        <form asp-action="Index" method="get">
            <div class="form-group">
                <label for="Category">Category:</label>
                <select id="Category" name="Category" class="form-control">
                    <option value="">All</option>
                    <option value="Hardware Issue">Hardware Issue</option>
                    <option value="Software Issue">Software Issue</option>
                    <option value="Network Issue">Network Issue</option>
                    <option value="Account Issue">Account Issue</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Priority">Priority:</label>
                <select id="Priority" name="Priority" class="form-control">
                    <option value="">All</option>
                    <option value="P1">P1 (Critical)</option>
                    <option value="P2">P2 (High)</option>
                    <option value="P3">P3 (Medium)</option>
                    <option value="P4">P4 (Low)</option>
                    <option value="P5">P5 (Very Low)</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Status">Status:</label>
                <select id="Status" name="Status" class="form-control">
                    <option value="">All</option>
                    <option value="Open">Open</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Resolved">Resolved</option>
                    <option value="Closed">Closed</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
    <div class="col-md-9">
        @if (Model == null || !Model.Any())
        {
            <h4 class="card-text font-weight-bold text-center w-100">No tickets</h4>
        }
        else
        {
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Ticket ID</th>
                        <th>Subject</th>
                        <th>Sender Email</th>
                        <th>Category</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Created Time</th>
                        <th>Updated Time</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td>@ticket.TicketId</td>
                            <td>@ticket.Subject</td>
                            <td>@ticket.SenderEmail</td>
                            <td>@ticket.Category</td>
                            <td>@ticket.Priority</td>
                            <td>@ticket.Status</td>
                            <td>@ticket.CreatedTime</td>
                            <td>@ticket.UpdatedTime</td>
                            <td>
                                <a asp-controller="Ticket" asp-action="ViewTicket" asp-route-id="@ticket.TicketId" class="btn btn-dark">View Ticket</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>