@model ASI.Basecode.Services.ServiceModels.TicketViewModel
@using static ASI.Basecode.Resources.Views.Screen

<div class="container pt-5">
    <h2>New Ticket</h2>

    <form method="post" asp-action="NewTicket">
        <div class="form-group">
            <label>Subject</label>
            <input asp-for="Subject" class="form-control" placeholder="Subject here" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Customer Email</label>
            <input asp-for="SenderEmail" class="form-control" placeholder="Email here" />
            <span asp-validation-for="SenderEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <input asp-for="Description" class="form-control" placeholder="Description here" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg mt-3">Submit</button>
    </form>
</div>
